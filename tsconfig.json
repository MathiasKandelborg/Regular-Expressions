{
  "compileOnSave": true,
  "files": [
    "./types/interfaces.d.ts",
    "./src/index.tsx",
    "./src/components/App.tsx",
    "./src/ui/material-ui-next/defaultTheme.ts",
    "./stories/index.stories.tsx",
    "./src/ui/inputs/DefaultInput.tsx",
    "./src/ui/inputs/EmailInput.tsx"
  ],
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "es2015",
    "jsx": "react",
    "moduleResolution": "node",
    "newLine": "LF",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": ["es2015", "es2016", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["types/*"],
  "parcelTsPluginOptions": {
    // If true type-checking is disabled
    "transpileOnly": false
  }
}
