{
  "compileOnSave": true,
  "compilerOptions": {
    "pretty": true,
    "strict": true,
    "alwaysStrict": true,
    "target": "es6",
    "module": "es2015",
    "jsx": "react",
    "moduleResolution": "node",
    "newLine": "LF",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./typings",
    "outDir": "./tsLib",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "parcelTsPluginOptions": {
    // If true type-checking is disabled
    "transpileOnly": false
  }
}
